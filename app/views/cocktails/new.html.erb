

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="createtitle">Create a new cocktail</h1>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>

         <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>


        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

